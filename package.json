{
  "name": "loan-management-service",
  "version": "1.0.0",
  "description": "A simple loan management service",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/src/server.js\"",
    "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
    "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
    "clear-jest-cache": "jest --clear-cache",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --collectCoverage=true ./tests",
    "build": "tsc",
    "typeorm": "ts-node -r dotenv/config -r ./src/module-alias.ts ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm -- migration:create src/libs/typeorm/migrations/$npm_config_name",
    "migration:generate": "npm run typeorm migration:generate -- -d ./src/libs/typeorm/ormconfig-cli.ts src/libs/typeorm/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run -- -d ./src/libs/typeorm/ormconfig-cli.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/libs/typeorm/ormconfig-cli.ts",
    "migration:permission": "ts-node -r dotenv/config ./src/libs/typeorm/grant-appuser-permission.ts",
    "migration:show": "npm run typeorm migration:show -- -d ./src/libs/typeorm/ormconfig-cli.ts",
    "format": "prettier --config .prettierrc.js --write './**/*.{js,ts,json,yml,yaml}'",
    "format:check": "prettier --config .prettierrc.js --check './**/*.{js,ts,json,yml,yaml}'"
  },
  "author": "ndry93",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^1.7.7",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "helmet": "^7.1.0",
    "http-graceful-shutdown": "^3.1.3",
    "joi": "^17.4.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "pg": "^8.12.0",
    "pino": "^9.5.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "swagger-parser": "^10.0.2",
    "typeorm": "^0.3.20",
    "uuid": "^8.3.2",
    "compression": "^1.7.4"
  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^29.5.4",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.17.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^11.2.6",
    "pino-pretty": "^10.3.1",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^4.5.0",
    "tslib": "^2.4.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run format"
    ],
    "*.{ts,js}": [
      "eslint"
    ]
  }
}
