{
    "compilerOptions": {
        "lib": ["es6"],
        "types": ["node", "express", "jest"],
        "allowJs": true,
        "module": "Commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "vendor/*"],
            "src/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": ["@types", "node_modules/@types"]
    },
    "exclude": ["clients", "dist", "./apps", "./packages"]
}
